{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "ESNext",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["./src/*"]
    },
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "./dist",
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
